[user]
	email = kdesp2003@gmail.com
	name = Konstantinos Despoinidis

[init]
	defaultBranch = main

[core]
    autocrlf = input
    editor = nvim
	tool = kdiff3

[status]
    branch = true
    showStash = true
    showUntrackedFiles = all

[diff]
    context = 3
    renames = copies
    interHunkContext = 10

[pager]
    diff = diff-so-fancy | $PAGER

[diff-so-fancy]
    markEmptyLines = false

[interactive]
    diffFilter = diff-so-fancy --patch
    singlekey = true

[push]
    default = current
    autoSetupRemote = true
    followTags = true
    
[pull]
    default = current
	rebase = false

[alias]
    lg = log --graph --pretty=format:'%C(magenta)%h %C(white) %an %ar%C(auto)  %D%n%s&n' --abbrev-commit

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = black bold
    frag = magenta
    context = white
    whitespace = yellow reverse
    old = red

[commit]
	template = /home/kdesp73/.config/git/template
